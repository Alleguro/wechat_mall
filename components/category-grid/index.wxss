/* components/category-grid/index.wxss */
.grid {
    height: 320rpx;
    margin: 10rpx;
    border: 1px dashed #DCEBE6;
    background-color: #fff;
    display: flex;
}

.grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.img {
    width: 60rpx;
    height: 60rpx;
}

.title {
    margin-top: 5rpx;
    font-size: 24rpx;
    color: #333;
}